{
  "buildCommand": "cd client && npm install && ./node_modules/vite/bin/vite.js build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "routes": [
    { "src": "/api/(.*)", "dest": "http://localhost:4000/$1", "methods": ["GET", "POST", "PUT", "DELETE"] },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
